---
import '../styles/global.css';
import Nav from '../components/Nav.astro';

const { title = "An Astro Framework for your development needs", description = "A framework utilizing Tailwind CSS to provide you with everything to get your build off the ground" } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
		<meta name="description" content={ description } />
		<script src="https://unpkg.com/htmx.org@1.9.10" defer></script>
	</head>
	<body>
		<Nav />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
